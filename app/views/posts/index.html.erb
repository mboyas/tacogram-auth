<% if @current_user%>

<div class="row">
  <% for post in @posts %>
    <div class="col-3">
      <h4>
        <!-- TODO: display the name of the user that created the post -->
        <table>
  <% for post in @posts %>
      <p>
         <%= post.body %> - <%= post.user.first_name %> - <%= post.user.last_name %> 
      </p>
  <% end %>
</table>
      </h4>
      <img class="img-fluid" src="<%= post.image %>" class="w-full">
      <p><%= post.body %></p>
    </div>
  <% end %>
</div>

<% else%>

<% flash[:notice] = "Not signed in!" %>

<% end %>