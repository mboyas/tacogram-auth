<h1>New Post</h1>

<% if @current_user%>

<%= form_with model: @post do |form| %>
  <p>
    <%= form.label "body" %>
    <%= form.text_field "body" %>
  </p>

  <p>
    <%= form.label "image" %>
    <%= form.text_field "image" %>
  </p>
  
  <p><%= form.submit %></p>
<% end %>

<%else%>

<% flash[:notice] = "Not signed in!" %>

<%end%>